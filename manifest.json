{
    "manifest_version": 2,
    "name": "Productivity Plus",
    "version": "1.0",
    "description": "Blocks distracting websites and tracks browsing time",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "notifications" 
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "img/icon48.png",
        "default_popup": "html/popup.html"
    },
    "options_page": "html/options.html"
}
